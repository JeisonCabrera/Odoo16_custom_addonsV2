<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_compras_yeapdata">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">                        
                        <div class="page">
                            <div class="oe_structure"/>
                            <div>
                                <!-- Titulo -->
                                <div class="row">
                                    <div class="col h2 text-center">
                                        <h5><span>CONDICIONES GENERALES DE LA ORDEN DE COMPRA</span></h5>
                                    </div>
                                </div>

                                <!-- Texto de tratamiento de datos -->
                                <div id="tratamiento_datos" class="row">
                                    <div>
                                        <t t-esc="o.tratamiento_datos_id.condiciones_oc"/>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <!-- Primera fila de  orden y fecha -->
                                <div class="row text-left justify-content-evenly">
                                    <div style="width: 49%">
                                        <table class="table table-bordered">
                                            <tr>
                                                <td style="width: 50%"><strong>ORDEN DE COMPRA</strong></td>
                                                <td><t t-esc="o.name"/></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div style="width: 2%"/>
                                    <div style="width: 49%">
                                        <table class="table table-bordered">
                                            <tr>
                                                <td style="width: 60%"><strong>FECHA ORDEN DE COMPRA</strong></td>
                                                <td><t t-esc="o.date_order"/></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <br/>
                                <!-- Tablas de DATOS DE COMPRADOR y DATOS DE PROVEEDO -->
                                <div class="row text-center justify-content-evenly">
                                    <div style="width: 49%">
                                        <table class="table table-bordered">
                                            <tr>
                                                <td colspan="2"><strong>DATOS DEL COMPRADOR</strong></td>
                                            </tr>
                                            <tr>
                                                <td colspan="2"><t t-esc="o.company_id.name"/></td>
                                            </tr>
                                            <tr>
                                                <td colspan="2">NIT - <t t-esc="o.company_id.vat"/></td>
                                            </tr>
                                            <tr>
                                                <td colspan="2"><t t-esc="o.company_id.city"/>, <t t-esc="o.company_id.street"/></td>
                                            </tr>
                                            <tr>
                                                <td style="width: 30%">CONTACTO</td>
                                                <td><t t-esc="o.user_id.name"/></td>
                                            </tr>
                                            <tr>
                                                <td>CARGO</td>
                                                <td><t t-esc="o.user_id.partner_id.function"/></td>
                                            </tr>
                                            <tr>
                                                <td>TELÉFONO</td>
                                                <td><t t-esc="o.user_id.phone"/></td>
                                            </tr>
                                            <tr>
                                                <td>CORREO ELECTRONICO</td>
                                                <td><t t-esc="o.user_id.email"/></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div style="width: 2%"/>
                                    <div style="width: 49%">
                                        <table class="table table-bordered">
                                            <tr>
                                                <td colspan="2"><strong>DATOS DEL PROVEEDOR</strong></td>
                                            </tr>
                                            <tr>
                                                <td colspan="2"><t t-esc="o.partner_id.name"/></td>
                                            </tr>
                                            <tr>
                                                <td colspan="2">NIT - <t t-esc="o.partner_id.vat"/></td>
                                            </tr>
                                            <tr>
                                                <td colspan="2"><t t-esc="o.partner_id.city"/>, <t t-esc="o.partner_id.street"/></td>
                                            </tr>
                                            <tr>
                                                <td style="width: 30%">CONTACTO</td>
                                                <td><t t-esc="o.contacto_proveedor_id.name"/></td>
                                            </tr>
                                            <tr>
                                                <td>CARGO</td>
                                                <td><t t-esc="o.contacto_proveedor_id.function"/></td>
                                            </tr>
                                            <tr>
                                                <td>TELÉFONO</td>
                                                <td><t t-esc="o.contacto_proveedor_id.phone"/></td>
                                            </tr>
                                            <tr>
                                                <td>CORREO ELECTRONICO</td>
                                                <td><t t-esc="o.contacto_proveedor_id.email"/></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <br/>
                                <!-- Tablas de DIRECCION DE ENVÍO Y DIRECCION DE FACTURACION -->
                                <div class="row text-center justify-content-evenly">
                                    <div style="width: 49%">
                                        <table class="table table-bordered">
                                            <tr>
                                                <td colspan="2"><strong>DIRECCIÓN DE ENVÍO</strong></td>
                                            </tr>
                                            <tr>
                                                <td style="width: 30%">RAZÓN SOCIAL</td>
                                                <td><t t-esc="o.company_id.name"/></td>
                                            </tr>
                                            <tr>
                                                <td>NIT</td>
                                                <td>NIT - <t t-esc="o.company_id.vat"/></td>
                                            </tr>
                                            <tr>
                                                <td>DIRECCIÓN</td>
                                                <!-- <td><span t-field="o.picking_type_id.warehouse_id.partner_id.street"/></td> -->
                                                <td><t t-esc="o.picking_type_id.warehouse_id.partner_id.street"/></td>
                                            </tr>
                                            <tr>
                                                <td>CIUDAD</td>
                                                <td><t t-esc="o.company_id.city"/>, <t t-esc="o.company_id.country_id.name"/></td>
                                            </tr>
                                            <tr>
                                                <td>CONTACTO</td>
                                                <!-- <td><span t-field="o.picking_type_id.warehouse_id.partner_id.name"/></td> -->
                                                <td><t t-esc="o.picking_type_id.warehouse_id.partner_id.name"/></td>
                                            </tr>
                                            <tr>
                                                <td>CELULAR</td>
                                                <!-- <td><span t-field="o.picking_type_id.warehouse_id.partner_id.mobile"/></td> -->
                                                <td><t t-esc="o.picking_type_id.warehouse_id.partner_id.mobile"/></td>
                                            </tr>
                                            <tr>
                                                <td>TELÉFONO</td>
                                                <!-- <td><span t-field="o.picking_type_id.warehouse_id.partner_id.phone"/></td> -->
                                                <td><t t-esc="o.picking_type_id.warehouse_id.partner_id.phone"/></td>
                                            </tr>
                                            <tr>
                                                <td>CORREO ELECTRONICO</td>
                                                <!-- <td><span t-field="o.picking_type_id.warehouse_id.partner_id.email"/></td> -->
                                                <td><t t-esc="o.picking_type_id.warehouse_id.partner_id.email"/></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div style="width: 2%"/>
                                    <div style="width: 49%">
                                        <table class="table table-bordered">
                                            <tr>
                                                <td colspan="2"><strong>DIRECCIÓN DE FACTURACIÓN</strong></td>
                                            </tr>
                                            <tr>
                                                <td style="width: 30%">RAZÓN SOCIAL</td>
                                                <td><t t-esc="o.company_id.name"/></td>
                                            </tr>
                                            <tr>
                                                <td>NIT</td>
                                                <td>NIT - <t t-esc="o.company_id.vat"/></td>
                                            </tr>
                                            <tr>
                                                <td>DIRECCIÓN</td>
                                                <td><t t-esc="o.contacto_factura_id.street"/></td>
                                            </tr>
                                            <tr>
                                                <td>CIUDAD</td>
                                                <td><t t-esc="o.contacto_factura_id.city"/>, <t t-esc="o.contacto_factura_id.country_id.name"/></td>
                                            </tr>
                                            <tr>
                                                <td>CONTACTO</td>
                                                <td><t t-esc="o.contacto_factura_id.name"/></td>
                                            </tr>
                                            <tr>
                                                <td>CELULAR</td>
                                                <td><t t-esc="o.contacto_factura_id.mobile"/></td>
                                            </tr>
                                            <tr>
                                                <td>TELÉFONO</td>
                                                <td><t t-esc="o.contacto_factura_id.phone"/></td>
                                            </tr>
                                            <tr>
                                                <td>CORREO ELECTRONICO</td>
                                                <td><t t-esc="o.contacto_factura_id.email"/></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
